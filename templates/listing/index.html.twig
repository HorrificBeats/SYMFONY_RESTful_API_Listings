{% extends 'base.html.twig' %}

{% block title %}Listing index{% endblock %}

{% block body %}
    <h1>Listing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>CreatedAt</th>
                <th>IsPublished</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for listing in listings %}
            <tr>
                <td>{{ listing.id }}</td>
                <td>{{ listing.title }}</td>
                <td>{{ listing.description }}</td>
                <td>{{ listing.price }}$</td>
                <td> {{ listing.category.title }}</td>
                <td>{{ listing.createdAt ? listing.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ listing.isPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('listing_show', {'id': listing.id}) }}">show</a>
                    <a href="{{ path('listing_edit', {'id': listing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('listing_new') }}">Create new</a>
{% endblock %}
